<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_serviceIsBound"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C6FFB6"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="invisible"
            android:text="Service is bound" />

        <TextView
            android:id="@+id/view_carIsRunning"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFD1D1"
            android:gravity="center"
            android:text="Car is running"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_startService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start service" />

    <Button
        android:id="@+id/btn_bindToService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind to service" />

    <Button
        android:id="@+id/btn_unbindFromService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unbind from service" />

    <Button
        android:id="@+id/btn_stopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop service" />

    <Button
        android:id="@+id/btn_runInForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run in foreground" />

    <Button
        android:id="@+id/btn_stopRunningInForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop running in foreground" />

    <Button
        android:id="@+id/btn_sendOneWayMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send one way message" />

    <Button
        android:id="@+id/btn_sendMessageWithReplyTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send message expecting an answer" />

</LinearLayout>